.container_bar
    padding 0.2rem
    position absolute
    top 0
    right 1.1rem
    left 0
    height 2rem
    z-index 99
    background-color #404040
    box-shadow inset 1px 0 0 hsla(0,0%,100%,.08), inset 0 1px 1px hsla(0,0%,0%,.15), inset 0 -1px 0 hsla(0,0%,100%,.05), 0 1px 0 hsla(0,0%,0%,.15), 0 1px 1px hsla(0,0%,0%,.1);

.toolbarLeft
    float left
.toolbarRight
    float right
.toolbarMiddle
    position absolute
    left 50%
.toolbarButton
    display: inline-block
    margin-top 2px
    border-radius: 2px;
    padding: 2px 2px 0;
    color: hsla(0,0%,100%,.8);
    background: none;
    font-size: 12px;
    line-height: 14px;
    border: 0 none;
    border: 1px solid rgba(64,64,64,.35);
.toolbarButton:hover,
.toolbarButton:focus
  background-color: hsla(0,0%,0%,.12);
  background-image: linear-gradient(hsla(0,0%,100%,.05), hsla(0,0%,100%,0));
  background-clip: padding-box;
  border: 1px solid hsla(0,0%,0%,.35);
  border-color: hsla(0,0%,0%,.32) hsla(0,0%,0%,.38) hsla(0,0%,0%,.42);
  box-shadow: 0 1px 0 hsla(0,0%,0%,.35) inset,
              0 0 1px hsla(0,0%,0%,.35) inset,
              0 1px 0 hsla(0,0%,0%,.35);

.toolbarButton::before
    content: url(../img/toolbarButton-sidebarToggle.png);

