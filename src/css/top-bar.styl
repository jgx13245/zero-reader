.top_bar
    transition padding 375ms ease-in-out
    box-sizing border-box
    top 0
    left 0
    width 100%
    margin 0 auto
    background-color rgba(0,0,0, 0.9)
    position absolute
    padding 1.2rem 0
    z-index 1

.left_content
    padding-left 1.2rem
    float left

.middle_content
    position absolute
    height 2rem
    left 3.2rem
    right 3.2rem
    width calc(100% - 6.4rem)
    color #FFF
    text-align center

.right_content
    padding-right 1.2rem
    float right
.icon
    width 2rem
    height 2rem
