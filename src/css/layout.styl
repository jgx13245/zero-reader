
.toc_layout
    position absolute
    top 2.4rem
    bottom 0
    left 0
    width 240px
    box-shadow 2px 2px 8px rgba(0,0,0,.2)
    z-index 2
    transition-duration 200ms
    transition-timing-function: ease;
    transition-property: width;
.content
    background-color #404040
    overflow auto
    width 100%
    height 100%
@media screen and (max-width: 379px)
    .toc_layout
        width 95%


.toc_content
    background-color #404040
    height 100%
    overflow-y: auto;

.theme_white.book_layout
    background-color #FFF
.title_text
    float left
    line-height 2rem
    color #fff

.close_book_toc
    float right
    fill currentcolor
    float right
    width 20px !important
    height 20px !important
    color #fff !important
    margin-top 4px
    cursor pointer
    display inline-block

.book_toc_title
    height 2rem
    border-bottom 1px solid #cbcbcb
    padding 0 1rem

.pageHtml
    padding-top 2.8rem
    box-shadow inset 1px 0 0 hsla(0,0%,100%,.05)
.view
    margin: 1px auto -8px auto;