
.toc_layout
    padding-bottom 2.5rem
    position fixed
    top 0
    left 0
    width 240px
    box-shadow 2px 2px 8px rgba(0,0,0,.2)
    z-index 999
    transition-duration 200ms
    transition-timing-function ease
    transition-property width
    height 100%
.content
    background-color #404040
    // overflow auto
    // width 100%
    // height 100%
@media screen and (max-width: 379px)
    .toc_layout
        width 95%

.toc_content
    background-color #404040
    height 100%
    overflow-y: auto;

.theme_white.book_layout
    background-color #FFF
.title_text
    float left
    line-height 2rem
    color #fff

.close_book_toc
    fill currentcolor
    float right
    width 20px !important
    height 20px !important
    color #fff !important
    margin-top 4px
    cursor pointer
    display inline-block

.book_toc_title
    height 2rem
    border-bottom 1px solid #cbcbcb
    padding 0 1rem

.pageHtml
    padding-top 2.8rem
    padding-bottom 1.5rem
    box-shadow inset 1px 0 0 hsla(0,0%,100%,.05)
.view
    margin: 1px auto -8px auto;
/*
银河白    #FFFFFF    RGB(255, 255, 255)

杏仁黄    #FAF9DE    RGB(250, 249, 222)

秋叶褐    #FFF2E2    RGB(255, 242, 226)

胭脂红    #FDE6E0    RGB(253, 230, 224)

青草绿    #E3EDCD    RGB(227, 237, 205)

海天蓝    #DCE2F1    RGB(220, 226, 241)

葛巾紫    #E9EBFE    RGB(233, 235, 254)

极光灰    #EAEAEF    RGB(234, 234, 239)
*/

.white > :global(.html_content)
    background-color #FFFFFF
.yellow > :global(.html_content)
    background-color #FAF9DE
.brown > :global(.html_content)
    background-color #FFF2E2
.red > :global(.html_content)
    background-color #FDE6E0
.green > :global(.html_content)
    background-color #E3EDCD
.blue > :global(.html_content)
    background-color #DCE2F1
.purple > :global(.html_content)
    background-color #E9EBFE
.gray > :global(.html_content)
    background-color #EAEAEF