.bottom_bar
    transition padding .4s ease-in-out
    box-sizing border-box
    padding 1.2rem 8rem
    width 100%
    background-color rgba(0,0,0, 0.9)
    position fixed
    bottom 0
    left 0
.menus
    display block
    list-style none
    color #fff
.menu
    font-size 2rem
    text-align center
    width 25%
    display inline-block
.icon
    padding 1rem

@media screen and (max-width: 800px)
    .bottom_bar
        padding 1.2rem 4rem

@media screen and (max-width: 640px)
    .bottom_bar
        padding 1.2rem 2rem